{{#extend "stylesheets"}}
    <link rel="stylesheet" href="/stylesheets/ad/create.css"/>
{{/extend}}

<form action="ac/create" method="post">
    <div class="form-group">
        <label>Titulo</label>
        <input type="text" name="title">
    </div>
    <div class="form-group">
        <label>Ciudad</label>
        <input type="text" name="city">
    </div>
    <div class="form-group">
        <label>C칩digo postal</label>
        <input type="text" name="postal_code">
    </div>
