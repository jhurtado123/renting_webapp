{{#extend "stylesheets"}}
    <link rel="stylesheet" href="/stylesheets/users/edit.css"/>
{{/extend}}
<h2>Edit your profile</h2>
{{currentUser._id}}

<form action="/users/profile" method="POST" enctype="multipart/form-data">
    <input type="text" name="name" placeholder="Modify your Name" value="{{ currentUser.name }}">
    <input type="text" name="phone" placeholder="Introduce tu nÃºmero de telefono" value="{{ currentUser.phone }}">
    <label for="profile_image">Imagen de perfil</label>
    <div class='uploaded-image'>
        <img class="image-preview" src="/uploads/userProfileImages/{{currentUser.profile_image}}">
        <input type="hidden" name="profile_image" value="{{currentUser.profile_image}}">
    </div>
    <input type="file" name="" id="imageUploadInput">
    <input type="text" name="description" placeholder="Modify your description" value="{{ currentUser.description }}">
    <input type="text" name="dni" placeholder="Introduce your dni" value="{{ currentUser.dni }}">
    <button>Update your Profile</button>
</form>
<div>
    <a href="/users/{{currentUser._id}}" class="button">Return to your profile back</a>
    <a href="/home" class="button">Return to the home</a>
</div>

{{#extend "scripts"}}
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/javascripts/users/edit.js"></script>
{{/extend}}